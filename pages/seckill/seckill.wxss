page{
  background-color: white;
}
.page-swiper{
    height: 350rpx;
}
.outerSwiper{
    height: 100%;
}
.item-wrap{
    display: flex;
    justify-content: space-between;
    margin:20rpx;
    background-color: white;
    border-bottom: 1rpx solid #cccccc;
    padding-bottom: 20rpx;
}
.img-box{
    width: 135rpx;
    height: 135rpx;
    margin-right: 15rpx;
}
.product-img{
    width: 100%;
    height: 100%;
}
.item-left{
    display: flex;
    flex: 1;
}
.left-text{
    display: flex;
    flex-direction: column;
    justify-content: space-around;
}
.main-title{
    font-size: 32rpx;
}
.price-text{
    font-size: 28rpx;
    display: flex;
    /* justify-content: space-between; */
    align-items: center;
}
.rightNo{
    display: flex;
    flex-direction: column;
    justify-content: center;
    align-items: center;
    height: 100%;
}
.rightHas{
    display: flex;
    flex-direction: column;
    justify-content: space-around;
    align-items: center;
    height: 100%;
}
.buyBtn{
  width: 165rpx;
  text-align: center;
  font-size: 28rpx;
  color: white;
  border-radius: 30rpx;
  padding: 7rpx 0;
}
.redText{
    color: red;
    width: 100rpx;
}
.originPrice{
    text-decoration: line-through;
    color: #b4b4b4;
    padding-top: 2rpx;
}
.prevent{
  color: #000000;
  margin-left: 5rpx;
}
.inventory{
    color: #999999;
    font-size: 27rpx;
}
.bigPrice{
    font-size: 30rpx;
}
.marks{
    font-size: 28rpx;
}
.goBuy{
  background-color: #555555;
  color: #27d98c;
}
.buyOver{
    background-color: #cccccc;
    color: white;
}
.slide-image{
    width: 100%;
    height: 100%;
}
/* 轮播图点样式 */
.outerSwiper .wx-swiper-dot {
    width: 25rpx;
    height: 5rpx;
    display: inline-flex;/* 这里设置点点之间的距离 */
    border-radius: 0px;
    margin-left: 3rpx;
    justify-content: space-between;
  }
  .willBegin{
    background-color: #999999;
    color: white;
  }
  .item-right{
    width: 190rpx;
  }
  .lastItem{
      border-bottom: none;
  }